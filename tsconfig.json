{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "collapo": ["src/*"],
    },
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "types": [
      "cypress"
    ]
  },
  "include": [
    "src/*.ts",
    "test/*.ts",
    "cypress/*/*.ts"
  ],
  "exclude": [
    ".vscode",
    "dist",
    "doc",
    "node_modules"
  ]
}
